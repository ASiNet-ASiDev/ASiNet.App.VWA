<local:WorkspaceObject x:Class="ASiNet.VWA.Controls.WorkspaceWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:ASiNet.VWA.Controls"
                       mc:Ignorable="d" 
                       d:DesignHeight="450" d:DesignWidth="800" Width="300" Height="200">
    <Grid x:Name="Root" Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Header" Background="White" MouseLeftButtonDown="Header_MouseLeftButtonDown" MouseLeftButtonUp="Header_MouseLeftButtonUp">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="PinMenuItem" Header="Pin" Click="PinMenuItem_Click"/>
                    <MenuItem Name="MinimizeMenuItem" Header="Minimize" Click="MinimizeMenuItem_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
    </Grid>
</local:WorkspaceObject>
